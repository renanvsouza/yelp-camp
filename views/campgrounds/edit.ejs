<div class="row text-center my-3">
	<div class="col">
		<h1>Editing campground: <%= campground.title %> </h1>
	</div>
</div>
<div class="d-flex justify-content-center">
	<div class="mx-3" style="width: 100%; max-width: 690px;">
		<form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
			<div class="mb-3">
				<label for="title" class="form-label">Title:</label>
				<input type="text" class="form-control" name="title" id="title" value="<%= campground.title %>">
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description: </label>
				<textarea name="description" class="form-control" id="description" cols="20" rows="5"><%= campground.description %> 
        		</textarea>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Image URL: </label>
				<input type="text" class="form-control" name="image" id="image" value="<%= campground.image %>">
			</div>
			<div class="row mb-3">
				<label for="price" class="form-label">Price: </label>
				<div class="input-group">
					<span class="input-group-text" id="inputGroupPrepend">$</span>
					<input type="text" class="form-control" name="price" id="price" aria-describedby="inputGroupPrepend" value="<%= campground.price %>">
				</div>
			</div>
			<div class="mb-3">
				<label for="location" class="form-label">Location:</label>
				<input type="text" class="form-control" name="location" id="location" value="<%= campground.location %>">
			</div>
			<button type="submit" class="btn btn-primary">Save Changes</button>
		</form>
		<div class="my-2">
			<form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
				<button class="btn btn-danger" type="submit">Delete Campground</button>
			</form>
		</div>
	</div>
</div>