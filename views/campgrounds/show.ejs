<div class="d-flex">
	<div>
		<h1><%= campground.title %></h1>
	</div>
	<% if (currentUser && (currentUser.id == campground.author.id)) { %>
	<div>
		<span class="badge rounded-pill bg-secondary">
			<a href="/campgrounds/<%= campground.id %>/edit" style="color: rgb(224, 224, 224); text-decoration: none;">Edit</a>
		</span>
	</div>
	<% } %>
</div>
<div class="d-flex justify-content-center my-2 py-4">
	<%- include('../includes/carousel') %>
</div>
<div class="row border-bottom">
	<div class="col">
		<h4>About:</h4>
		<p><%= campground.description %></p>
	</div>
</div>
<div class="row py-3 border-bottom">
	<div class="col">
		<section><span class="fw-bold">Location: </span><%= campground.location %></section>
	</div>
</div>
<div class="row py-3 border-bottom">
	<div class="col">
		<section><span class="fw-bold">Price: </span>$ <%= campground.price  %> /night</section>
	</div>
</div>
<div class="row py-3 border-bottom">
	<div class="col">
		<section><span class="fw-bold">Posted by: </span><%= campground.author.username %></section>
	</div>
</div>
<div class="row py-3">
	<% if (campground.reviews.length) { %>
	<h4>Reviews:</h4>
	<% } else { %>
	<h4>Be the first to leave a review:</h4>
	<% } %>
</div>
<% for (let review of campground.reviews) { %>
<div class="card mb-2">
	<div class="card-body">
		<section><span class="fw-bold">Rating: </span><%= review.rating %></section>
		<section><span class="fw-bold">Review: </span><%= review.body %></section>
		<section class="text-muted mt-3">Posted by <%= review.author.username %></section>
		<% if (currentUser && (currentUser.id == review.author.id)) { %>
		<div class="mt-2">
			<form action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=DELETE" method="POST">
				<button class="btn btn-outline-danger btn-sm" type="submit">Delete</button>
			</form>
		</div>
		<% } %>
	</div>
</div>
<% } %>
<% if (currentUser && (currentUser.id !== campground.author.id)) { %>
<div class="row py-3">
	<div class="col">
		<form action="/campgrounds/<%= campground.id %>/reviews" method="POST">
			<div class="mb-3">
				<label class="form-label" for="rating">Your rating:</label>
				<input class="form-range" type="range" name="rating" id="rating" min="1" max="5">
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Leave a review:</label>
				<textarea class="form-control" name="body" id="body" cols="30" rows="2" required></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-success" type="submit">Post Review</button>
			</div>
		</form>
	</div>
</div>
<% } %>